namespace iSynaptic.Languages
{
	language BaseLanguage
	{
		Space = " ";
		Whitespace = Space+;
	}

	language ExampleLanguage : BaseLanguage
		// interleave Whitespace
	{
		Main interleave Whitespace 
			= Greeting
			  Comma?
			  Adjective?
			  Subject
			  Punctuation+;

		Subject = !Jordan [A-Za-z]+;

		Adjective = "cruel"
				  | "pretty";

		String Greeting = "Hello" | Goodbye;
		Goodbye = "goodbye";

		Jordan = "Jordan";
		Comma = ",";
	}
}